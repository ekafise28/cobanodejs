<%- include('../_layouts/adminheader') %>

                   
   <div class="ibox-content col-lg-8 mx-auto">

    <div class="jumbotron" style="text-align:center;">
        <h1><b>Add Category</b></h1>  
    </div>
                            <form class="form-horizontal" method="post" action="/admin/categories/add-category"  enctype="multipart/form-data">
                                <div class="form-group"><label class="col-lg-2 control-label">Title (Bahasa)</label>
                                    <div class="col-lg-8"><input type="text" class="form-control" name="judul" value="<%= judul %>" placeholder="judul">
                                    </div>
                                </div>
                                <div class="form-group"><label class="col-lg-2 control-label">Title</label>
                                    <div class="col-lg-8"><input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
                                    </div>
                                </div>
                                <div class="form-group"><label class="col-lg-2 control-label">Image</label>
                                    <div class="col-lg-8"><input type="file" class="form-control" name="image" id="img">
                                    </div>
                                </div>
                                <div class="form-group"><label class="col-lg-2 control-label">Preview</label>
                                    <div class="col-lg-8"> <img src="#" id="imgPreview" alt="imgPreview">
                                    </div>
                                </div>
                                <div class="form-group"><label class="col-lg-2 control-label">Active</label>
                                    <div class="col-lg-8"><select class="form-group" name="activeflag">
                                                            <option value="1">Yes</option>
                                                            <option value="0>">No</option>
                                                          </select>
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <div class="col-lg-8">   <button class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
</div>


<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();
      reader.onload = function (e) {
        $("#imgPreview").attr('src', e.target.result).width(300).height(300);
      }
      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#img").change(function () {
    readURL(this);
  });
</script>

