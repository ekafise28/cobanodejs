<%- include('../_layouts/adminheader') %>
   <div class="ibox-content col-lg-8 mx-auto">
    <div class="jumbotron" style="text-align:center;">
        <h1><b>Category</b></h1>  
    </div>
                            <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="8">
                                <thead  style='background-color:#FF4500; color:#FFF;'>
                                <tr>
                                    <th data-toggle="true">Category</th>
                                    <th>Active</th>
                                    <th style="text-align:center;">Edit</th>
                                    <th style="text-align:center;">Delete</th>
                                    <!--th data-hide="all">Date</th-->
                                </tr>
                                </thead>
                                <tbody>
                                 <!-- do looping -->
                                <% categories.forEach(function (cat) { %>
                                <tr>
                                    <td><%= cat.title %></td>
                                    <td> <% if (cat.activeflag === '1'){ %>
                                              Yes
                                            <% } else { %>
                                              No
                                            <% } %>
                                    </td>
                                    <td style="text-align:center;"><a href="/admin/categories/edit-category/<%= cat._id %>"><i class="fa fa-edit"></a></td>
                                    <td style="text-align:center;"><a class="confirmDeletion" href="/admin/categories/delete-category/<%= cat._id %>"><i class="fa fa-trash"></a></td>
                                </tr>
                                  <% }) %>
                                </tbody>
                                <tfoot>
                                <tr>
                                    <td colspan="5">
                                        <ul class="pagination pull-right"></ul>
                                    </td>
                                </tr>
                                </tfoot>
                            </table>
    
     <div><a href="/admin/categories/add-category" class="btn btn-primary">Add new category</a></div>

    </div>

<%- include('../_layouts/adminfooter') %>