<% include _layouts/header %>
<style>
.hero {
  width:960px;
  margin:1rem auto;
  position: relative;
}

.text {
  background:rgba(255,255,255,0.5);
  position: center;
  top:50%;
  left:0;
  padding:1rem;
  transform:translateY(-50%);
}

hr { 
  width:60%; 
  height:0.001rem; 
  background: #676a6c;
  margin-top: -0.4rem;
  margin-bottom: 0rem;
}

/* test */
